extends layout

block content
  h1= title
  p Welcome to #{title}
  - if (user)
    = user.email

  div
    form(action="/api/auth/login", method="POST")
      input#email(type="text", name="username", placeholder="email")
      input#password(type="password", name="password", placeholder="Пароль")
      button(type="submit")
        | Войти